@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="d-flex row justify-content-center align-items-center">
    <div class="col-md-4 bg-body-tertiary border rounded-3 ">
        <section class=" my-3 mx-2 d-flex flex-column align-content-center">
            <div class="text-center my-4">
                Biblioteca
            </div>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Senha</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div class="d-flex row justify-content-center">
                    <button id="login-submit" type="submit" class="w-50 btn btn-lg btn-primary">Log in</button>
                </div>
                <hr />
                <div class="d-flex flex-column align-items-center text-center">
                    <small class="my-2">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Novo cadastro</a>
                    </small>
                    <small class="my-2">
                        <a id="forgot-password" asp-page="./ForgotPassword">Esqueci minha senha</a>
                    </small>
                    <small class="my-2">
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar e-mail de confirmação</a>
                    </small>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
