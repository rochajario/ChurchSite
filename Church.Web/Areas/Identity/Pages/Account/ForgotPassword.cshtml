@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Esqueceu sua senha?";
}

<div class="d-flex row justify-content-center align-items-center">
    <div class="col-md-4 bg-body-tertiary border rounded-3 ">
        <section class="my-3 mx-2 d-flex flex-column align-content-center">
            <div class="text-center my-4">
                Biblioteca
            </div>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="nome@email.com" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="d-flex flex-column align-items-center text-center">
                    <button type="submit" class="w-50 btn btn-lg btn-primary">Alterar Senha</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
