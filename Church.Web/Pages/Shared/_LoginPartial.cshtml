@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <!-- Example split danger button -->
    <div class="btn-group ml-3">
        <button type="button" class="btn btn-outline-light ms-lg-3">Olá @User.Identity?.Name!</button>
        <button type="button" class="btn btn-light dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
            <span class="visually-hidden">Perfil</span>
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item disabled" href="#">Meu Painel (Em Breve)</a></li>
            <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Dados Cadastrais</a></li>
            <li><hr class="dropdown-divider"></li>
            <li>
                <a class="dropdown-item text-warning" asp-area="" asp-page="/Members">
                    Gerir Membresia
                </a>
                <a class="dropdown-item text-warning" asp-area="" asp-page="/Events/Index">
                    Gerir Eventos
                </a>
                <a class="dropdown-item text-warning disabled" href="#">
                    Gerir Biblioteca (Em Breve)
                </a>
            </li>
            <li><hr class="dropdown-divider"></li>
            <li>
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                    <button class="dropdown-item text-danger" type="submit">
                        <strong>Sair</strong>
                     </button>
                </form>
            </li>
        </ul>
    </div>
}
else
{
    <a class="btn btn-outline-light ms-lg-3" asp-area="Identity" asp-page="/Account/Login">
        Área do Membro
    </a>
}
