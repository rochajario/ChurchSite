<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IBRBH</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Church.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Header -->
    <header class="header">
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <!-- Logo / Nome -->
                <a class="navbar-brand" asp-area="" asp-page="/Index"><img src="~/images/logo.png" alt="IBRBH" /></a>

                <!-- Botão do menu mobile -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon" style="filter: invert(1);"></span>
                </button>

                <!-- Links da Navbar -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <partial name="_LinksPartial" />
                    <!-- Botão CTA -->
                    <button type="button" class="btn btn-warning ms-lg-3" style="color: #432818;" data-bs-toggle="modal" data-bs-target="#contributeModal">
                        Contribua
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="contributeModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header d-flex justify-content-center" style="background-color: #64301e;">
                                    <img src="~/images/logo.png" alt="IBRBH" />
                                </div>
                                <div class="modal-body text-center">
                                    <h4>Pix</h4>
                                    <p>contato@ibrbh.com.br</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="@(ViewBag.Container ?? "container mt-3")">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-light text-center">
        <div class="container">
            <small>&copy; 2025 - Igreja Batista Reformada em Belo Horizonte</small>
        </div>
    </footer>

    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>